%p#notice= notice
.container
  %p
    %strong Name:
    = @ticket.name

  %p
    %strong Email:
    = @ticket.email

  %p
    %strong Department:
    = @ticket.department

  %p
    %strong Subject:
    = @ticket.subject

  %p
    %strong Request:
    = @ticket.request

    %p
    %strong Created At:
    = @ticket.created_at

    %p
    %strong Updated At:
    = @ticket.updated_at

  = link_to 'Edit', edit_ticket_path(@ticket), :class => "btn btn-primary"
  = link_to 'Listing tickets', tickets_path, :class => "btn btn-success"
