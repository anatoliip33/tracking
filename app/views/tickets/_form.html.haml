= form_for(@ticket) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= pluralize(@ticket.errors.count, "error")
      %h2 prohibited this ticket from being saved:

      %ul
      - @ticket.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :department
    %br
    = f.text_field :department
  .field
    = f.label :subject
    %br
    = f.text_field :subject
  .field
    = f.label :request
    %br
    = f.text_area :request
  .actions
    = f.submit
